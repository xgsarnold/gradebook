<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Login</h1>
<p>Please login below.</p>

<%= form_tag(login_path) do %>

  <p><%= label_tag :email %>
  <%= email_field_tag :email %></p>

  <p><%= label_tag :password %>
  <%= password_field_tag :password %></p>

  <%= label_tag :user_type, 'Teacher' %>
    <%= radio_button_tag :user_type, 'Teacher' %><br>
  <%= label_tag :user_type, 'Student' %>
    <%= radio_button_tag :user_type, 'Student' %><br>
  <%= label_tag :user_type, 'Parent' %>
    <%= radio_button_tag :user_type, 'Parent' %>



  <%= submit_tag "Log in" %>
<% end %>
